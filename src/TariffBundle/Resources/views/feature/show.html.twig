{% extends 'TariffBundle:Default:layout_inner.html.twig' %}
{% block title %}Возможность{% endblock %}
{% block pagetitle %}Возможность{% endblock %}


{% 
    set crumbs = [
        {title: 'Список', path: 'feature_index'}, 
        {title: 'Возможность', current : true}
    ]
%}

{% block body %}
    <table class="table table-striped table-hover ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ feature.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ feature.name }}</td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ feature.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <a class="btn btn-info" href="{{ path('feature_edit', { 'id': feature.id }) }}">Изменить</a>
        <input type="submit" value="Удалить" class="btn btn-danger">
    </div>
{% endblock %}
